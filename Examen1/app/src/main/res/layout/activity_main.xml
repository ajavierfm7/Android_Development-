<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etNombreTrabajador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del trabajador (opcional)" />

    <EditText
        android:id="@+id/etHorasTrabajadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Horas trabajadas"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etTarifaHora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tarifa por hora"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular Salario" />

    <TextView
        android:id="@+id/tvSalarioBruto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salario Bruto:" />

    <TextView
        android:id="@+id/tvDeduccionINSS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DeducciÃ³n INSS:" />

    <TextView
        android:id="@+id/tvSalarioNeto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salario Neto:" />

</LinearLayout>